<html>
    <head>
        <title>
            <%= title %>
        </title>
        <!--Use font awesome to style Contact list-->
        <link rel="stylesheet" href="https://kit.fontawesome.com/87241837d4.css" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        
            <h1 id="heading">
                Contact List
            </h1>
        
        


        <div id="contacts">
            <ul>
            <% for (let i of contact_list) {%>
               
                    <li>
                        
                            <p> <%= i.name %> </p> 
                            <p> <%= i.phone %> </p>
                        
                            <div class="delete-button">
                            <!--written a query request-->
                                <a href="/delete-contact/?id=<%= i._id%>">[x]</a>
                                
                            </div>
                    </li>
                
                <% } %>
            </ul>
        </div>

        <div id="form-fill">
            <form id="form-sty" action="/create-contact" method="post">
                <input type="text" name="name" placeholder="Enter your name" required>
                <input type="number" name="phone" placeholder="Enter the number" required>
                <button type="submit">Submit form</button>
            </form>
        </div>

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>